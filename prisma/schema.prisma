generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  MEMBER
}

enum UserStatus {
  ACTIVE
  PENDING
  DISABLED
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  displayName String? // Display name for family vault, defaults to email prefix
  passwordHash String
  kdfSalt   String   // Base64-encoded salt for client-side key derivation

  // Membership
  role   UserRole   @default(MEMBER)
  status UserStatus @default(PENDING)

  // 2FA fields
  totpEnabled         Boolean @default(false)
  totpSecretEncrypted String? // Server-side encrypted TOTP secret

  // Public key cryptography for sharing
  publicKey            String? // Base64-encoded libsodium public key
  encryptedPrivateKey  String? // Private key encrypted with vault key

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  vaultItems VaultItem[]
  sessions   Session[]
  auditEvents AuditEvent[]
  requestsMade AccessRequest[] @relation("Requester")
  requestsReceived AccessRequest[] @relation("Owner")
  grantsGiven ShareGrant[] @relation("GrantGiver")
  grantsReceived ShareGrant[] @relation("GrantRecipient")
  fileBlobs FileBlob[]

  @@index([email])
  @@index([status])
  @@index([role])
}

enum Visibility {
  PRIVATE
  FAMILY_METADATA
}

model VaultItem {
  id       String   @id @default(cuid())

  // Ownership
  ownerUserId String
  owner       User   @relation(fields: [ownerUserId], references: [id], onDelete: Cascade)

  // Metadata (unencrypted)
  type  String  // 'PASSWORD' | 'NOTE'
  title String
  url   String? // Plaintext URL for family vault visibility
  tags  String[] @default([])

  // Family vault settings
  visibility  Visibility @default(FAMILY_METADATA)
  requestable Boolean    @default(true)

  // Encrypted fields
  wrappedItemKey   String // DEK encrypted with user's vault key
  encryptedPayload String // Actual data encrypted with DEK
  cryptoMeta       Json   // { alg, dekNonce, payloadNonce }

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  accessRequests AccessRequest[]
  shareGrants ShareGrant[]
  fileBlobs FileBlob[]

  @@index([ownerUserId])
  @@index([type])
  @@index([visibility])
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  sessionTokenHash String   @unique // SHA-256 hash of JWT token
  expiresAt        DateTime

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([expiresAt])
}

model AuditEvent {
  id      String   @id @default(cuid())

  actorUserId String
  actor       User   @relation(fields: [actorUserId], references: [id], onDelete: Cascade)

  eventType  String  // 'SIGNUP', 'LOGIN', 'LOGOUT', 'CREATE_ITEM', 'DELETE_ITEM', etc.
  targetType String  // 'USER', 'VAULT_ITEM', etc.
  targetId   String

  ip        String
  userAgent String?

  createdAt DateTime @default(now())

  @@index([actorUserId])
  @@index([eventType])
  @@index([createdAt])
}

enum RequestStatus {
  PENDING
  APPROVED
  DENIED
  CANCELLED
  EXPIRED
}

model AccessRequest {
  id String @id @default(cuid())

  // Item being requested
  itemId String
  item   VaultItem @relation(fields: [itemId], references: [id], onDelete: Cascade)

  // Requester (family member asking for access)
  requesterUserId String
  requester       User   @relation("Requester", fields: [requesterUserId], references: [id], onDelete: Cascade)

  // Owner (person who owns the vault item)
  ownerUserId String
  owner       User   @relation("Owner", fields: [ownerUserId], references: [id], onDelete: Cascade)

  // Request details
  reason String? // Optional reason for requesting access
  status RequestStatus @default(PENDING)

  // Timestamps
  createdAt DateTime @default(now())
  decidedAt DateTime? // When approved/denied
  expiresAt DateTime? // When approved access expires (1 hour after approval)

  // Decision details
  decisionNote String? // Optional note from owner when approving/denying

  // Relations
  grant ShareGrant?

  // Indexes for efficient queries
  @@index([ownerUserId]) // Owner's inbox
  @@index([requesterUserId]) // Requester's history
  @@index([itemId])
  @@index([status])

  // Prevent duplicate pending requests
  @@unique([requesterUserId, itemId, status])
}

model ShareGrant {
  id String @id @default(cuid())

  // Item being shared
  itemId String
  item   VaultItem @relation(fields: [itemId], references: [id], onDelete: Cascade)

  // Grantor (owner sharing the item)
  fromUserId String
  fromUser   User   @relation("GrantGiver", fields: [fromUserId], references: [id], onDelete: Cascade)

  // Recipient (family member receiving access)
  toUserId String
  toUser   User   @relation("GrantRecipient", fields: [toUserId], references: [id], onDelete: Cascade)

  // Associated request (optional - can grant without request)
  requestId String? @unique
  request   AccessRequest? @relation(fields: [requestId], references: [id], onDelete: SetNull)

  // Encrypted item key for recipient
  wrappedItemKeyForRecipient String // Item DEK wrapped with recipient's public key

  // Grant lifecycle
  expiresAt DateTime
  revokedAt DateTime?
  createdAt DateTime @default(now())

  // Indexes
  @@index([toUserId]) // Recipient's grants
  @@index([fromUserId]) // Grantor's grants
  @@index([itemId])
  @@index([expiresAt])
}

model FileBlob {
  id String @id @default(cuid())

  // Owner
  ownerUserId String
  owner       User   @relation(fields: [ownerUserId], references: [id], onDelete: Cascade)

  // File metadata
  title      String?
  filename   String
  mimeType   String
  sizeBytes  Int
  storagePath String

  // Encryption
  wrappedFileKey String? // File DEK wrapped with user's vault key
  cryptoMeta     Json?   // {alg, nonce}

  // Optional association with vault item
  itemId String?
  item   VaultItem? @relation(fields: [itemId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Indexes
  @@index([ownerUserId, createdAt])
  @@index([ownerUserId, title])
  @@index([ownerUserId, filename])
}
