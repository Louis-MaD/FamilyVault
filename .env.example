# Database Connection
DATABASE_URL=postgresql://vaultuser:CHANGE_THIS_PASSWORD@localhost:5432/vaultdb

# Session Management
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=CHANGE_THIS_TO_A_RANDOM_64_CHARACTER_HEX_STRING

# Server-Side Encryption Key (for TOTP secrets, etc.)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SERVER_ENCRYPTION_KEY=CHANGE_THIS_TO_A_RANDOM_64_CHARACTER_HEX_STRING

# Application Configuration
APP_ORIGIN=http://localhost:3000
NODE_ENV=development
